<view class="login">
   <view class="title">足球圈 - 登录</view>
   <input bindinput="handleName" class="number" focus type="number" placeholder="手机号" />
   <input bindinput="handlePwd" class="password" type="password" placeholder="密码" />
   <text class="text">
      还没有账号？点击此处立即注册
   </text>
   <button hover-class="hover" class="btn" bindtap="submit">提 交</button>
</view>