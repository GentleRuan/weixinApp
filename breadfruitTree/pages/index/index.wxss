/**index.wxss**/
.title{
   width: 750rpx;
   height: 50px;
   background: #0dc441;
   color: #fff;
   text-align: center;
   line-height: 50px;
   position: fixed;
   top: 0;
   left: 0;
   z-index: 1;
}
.swiper-tab{  
   width: 750rpx;
   height: 50px;
   line-height: 50px;
   color: #999;
   background: #fff;
   opacity: 0.7;
   display: flex;
   justify-content: space-around;
   position: fixed;
   top: 50px;
   left: 0;
   z-index: 1;
}  
.swiper-tab-list{  
   width: 33.33%;
   text-align: center;
   border-bottom: 1px solid #ccc; 
}  
.on{ 
   color: #0dc441;
   border-bottom: 3px solid #0dc441;
   box-sizing: border-box;
} 
.swiper-box{
   width: 750rpx;
   height: 1000px;
   margin-top: 100px;
}
.item-box{
   width: 750rpx;
   background: #fff;
   display: flex;
   flex-wrap: wrap;
   justify-content: space-around;
}
.img-item{
   width: 50%;
   height: 220px;
   padding-left: 3%;
   box-sizing: border-box;
}
.image{
   width: 184px;
   height: 184px;
   display: block;
}
.item{
   background: #fff;
   display: flex;
   flex-wrap: wrap;
   justify-content: space-around;
}
.img{
   width: 50%;
   padding-left: 3%;
   box-sizing: border-box;
}